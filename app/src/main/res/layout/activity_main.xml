<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.trnclong.bai7.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tieu_de"
       android:gravity="center"
        android:textSize="@dimen/textView"
        android:textColor="@color/yellow"
        android:background="@color/Xanh_berin"
        />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:layout_marginTop="@dimen/margin_top">

        <TextView
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/editText"
            android:text="@string/he_so_a"
            android:layout_marginLeft="@dimen/margin_left"
            />

        <EditText
            android:id="@+id/edt_hsA"
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_right"/>
    </LinearLayout>

 <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:layout_marginTop="@dimen/margin_top">

        <TextView
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/editText"
            android:text="@string/he_so_b"
            android:layout_marginLeft="@dimen/margin_left"
            />

        <EditText
            android:id="@+id/edt_hsB"
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_right"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:layout_marginTop="@dimen/margin_top">

        <TextView
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/editText"
            android:text="@string/he_so_c"
            android:layout_marginLeft="@dimen/margin_left"
            />

        <EditText
            android:id="@+id/edt_hsC"
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_right"/>
    </LinearLayout>

    <TextView
        android:id="@+id/txt_KetQua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/textView"
        android:layout_marginTop="@dimen/margin_top"
        android:background="@color/Xanh_berin"
        android:textColor="@color/yellow"
        android:hint="@string/ket_qua"
        android:layout_marginRight="@dimen/margin_right"
        android:layout_marginLeft="@dimen/margin_left"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginTop="@dimen/margin_top">

        <Button
            android:id="@+id/btn_Giai"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/giai"
            android:textColor="@color/black"
            />
        <Button
            android:id="@+id/btn_Xoa"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/xoa"
            android:textColor="@color/black"
            />
    </LinearLayout>

</LinearLayout>
